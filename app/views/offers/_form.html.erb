<html>
<body>
<div id="main">
    <div class="content">
      <% form_for @offer do |f| %>
        <%= f.error_messages %>
        <%= f.hidden_field :post_id %>
        <%= f.hidden_field :user_id, :value => current_user.id -%>
        <p>
          <%= f.text_field :content %>
        </p>
        <p><%= f.submit "Submit" %></p>
      <% end %>
    </div>
  </div>
</body>
</html>
